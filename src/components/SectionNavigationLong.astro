---
import type { SectionNavigation } from '../lib/types';

export type Props = {
  readonly sectionNavigation: SectionNavigation | undefined;
}
const { sectionNavigation } = Astro.props
---
<nav class="sectionNavigationLong w-full mb-0 bg-white py-2 px-4 font-sans">
  <p class="prev m-1">
    {sectionNavigation?.prev ? <span class="breadcrumb inline-block">
      <span class="separator inline-block px-2 font-serif">&#149;<!--&#128279;--><!-- &#9198; --></span>
      <a href={sectionNavigation.prev.url} class="text-blue-800 visited:text-blue-800">{sectionNavigation.prev.title}</a>
    </span> : undefined}
  </p>
  <p class="next m-1">
    {sectionNavigation?.next ? <span class="breadcrumb inline-block">
      <span class="separator inline-block px-2 font-serif">&#149;</span>
      <a href={sectionNavigation.next.url} class="text-blue-800 visited:text-blue-800">{sectionNavigation.next.title}</a>
    </span> : undefined}
  </p>

  <p class="index m-1">
    {sectionNavigation?.index ? <span class="breadcrumb inline-block">
      <span class="separator inline-block px-2 font-serif">&#8593;<!-- &#128463; --><!--&#9167;--></span>
      <a href={sectionNavigation.index.url} class="text-blue-800 visited:text-blue-800">All Posts</a>
    </span> : undefined}
  </p>
</nav>

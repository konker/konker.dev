---
import { Home, MoveRight } from 'lucide-astro';
import type { BreadcrumbT } from '../lib/types';

export type Props = {
  readonly breadcrumbs?: ReadonlyArray<BreadcrumbT> | undefined;
}
const { breadcrumbs } = Astro.props
const last = breadcrumbs?.length ? breadcrumbs.length - 1 : 0;
---
{ breadcrumbs ? <nav class="breadcrumbs float-left hidden md:inline-block max-w-50 ml-6 mt-2 px-2 pb-1 bg-white rounded-lg">
  {
    breadcrumbs.map((breadcrumb, idx: number) => (
      <span class="breadcrumb font-sans">
        {idx === 0 ? <span class="separator inline-block py-1 px-1 mb-[-0.55rem]"><Home size="24"/></span> : undefined}
        <a href={breadcrumb.url} class="inline-block py-1 px-1 visited:text-blue-800">
          <span class="title">{ breadcrumb.title }</span>
        </a>
        {idx < last ? <span class="separator inline-block mb-[-0.45rem] py-1 px-1"><MoveRight size="18"/></span> : undefined}
      </span>
    ))}
</nav> : undefined }

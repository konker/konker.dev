---
import type { LinkT } from '../../lib/types';
import { NAV_ICON_SIZE } from '../../scripts/consts';

type Props = LinkT & {
  readonly selected?: boolean;
};

const { url, title, Icon, textClass, selected } = Astro.props;
const classNames = !!selected ? 'nav-link selected' : 'nav-link';
---

<span class={classNames}>
  {
    Icon ? (
      <span
        class={`float-left md:float-none separator inline-block ml-3 md:ml-0 md:mr-1 mb-[-0.20rem] ${textClass ?? ''}`}
      >
        <a href={url}><Icon class={textClass} size={NAV_ICON_SIZE} /></a>
      </span>
    ) : (
      <span
        class={`float-left md:float-none separator inline-block ml-3 md:ml-0 md:mr-1 mb-[-0.20rem] w-[${NAV_ICON_SIZE}px]`}
      />
    )
  }
  <a href={url} class="text">{title}</a>
</span>

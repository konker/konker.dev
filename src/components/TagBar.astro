---
import { Tags } from 'lucide-astro';

export type Props = {
  readonly tags: Array<string>;
}

const { tags } = Astro.props
---
<p class="tags mt-1 ml-1 md:mt-3 font-sans align-text-bottom">
  <span class="separator inline-block py-0 px-0 mb-[-0.55rem]"><Tags size="24"/></span>
  {tags.map((tag: string) => (
    <span class="tag inline-block py-0 px-3 bg-white mb-2 mr-2 rounded-lg font-sans"><a href={`/tags/${tag}`} class="text-blue-800">#{tag}</a></span>
  ))}
</p>

<style>
  .tags a:visited {
    color: #00a;
  }
</style>

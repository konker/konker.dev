---
import { getCollection } from 'astro:content';
import ArticleLayout from '../../layouts/ArticleLayout.astro';
import type { BreadcrumbT } from '../../lib/types';
import { HomeBreadcrumb } from '../../lib';
import { collectionEntryToUrl } from '../../lib/collections/helpers';
import type { Collections } from '../../content/config';

export async function getStaticPaths() {
  const entries = await getCollection('projects');
  return entries
    .filter(e => !e.data.draft)
    .map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const collection: Collections = 'projects' as const;
const indexBreadcrumb: BreadcrumbT = { title: 'Projects', url: `/${collection}/` };

const breadcrumbs: ReadonlyArray<BreadcrumbT> = [
  HomeBreadcrumb,
  indexBreadcrumb,
  { title: entry.data.title,  url: collectionEntryToUrl(collection, entry) }
];
---
<ArticleLayout {...entry.data} pageTitle={entry.data.title} breadcrumbs={breadcrumbs}>
  <Content />
</ArticleLayout>

---
import type { LinkT } from '../lib/types';
import { HomeBreadcrumb } from '../lib';
import ContentPageLayout from '../layouts/ContentPageLayout.astro';

// --------------------------------------------------------------------------
const pageTitle = 'About';

// --------------------------------------------------------------------------
const thisBreadcrumb: LinkT = { title: pageTitle, url: `/about/` };
const breadcrumbs: ReadonlyArray<LinkT> = [
  HomeBreadcrumb,
  thisBreadcrumb,
];
---

<ContentPageLayout pageTitle={pageTitle} breadcrumbs={breadcrumbs}>
  <p>About content</p>
</ContentPageLayout>

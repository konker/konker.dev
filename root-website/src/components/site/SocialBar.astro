---
interface Props {
  readonly class: string;
}
const { class: classNames } = Astro.props;
const wrapperClassNames = `social-bar ${classNames}`;
---

<div class={wrapperClassNames}>
  <div class="inner flex flex-row justify-start">
    <div class="codeberg">
      <a href="https://codeberg.org/konker/" title="Codeberg"
        ><img src="/codeberg-logo_icon_gray.svg" alt="codeberg" class="h-[24px]" /></a
      >
    </div>
    <div class="github">
      <a href="https://github.com/konker/" title="Github">
        <img src="/github-mark.svg" alt="github" class="inline dark:hidden h-[24px]" />
        <img src="/github-mark-white.svg" alt="github" class="hidden dark:inline h-[24px]" />
      </a>
    </div>
    <div class="linkedin">
      <a href="https://www.linkedin.com/in/konradmarkus/" title="LinkedIn"
        ><img src="/linkedin-logo.svg" alt="LinkedIn" class="h-[24px] mt-[2px]" /></a
      >
    </div>
    <!--
    <div class="twitter">
      <a href="https://twitter.com/konker/"><Twitter size="24" /></a>
    </div>
    <div class="fediverse">
      <a href="https://fediverse.org/">FV</a>
    </div>
    -->
    <!--<div class="text-neutral-400 mt-[-3px] pl-2"><Tally1 size="32" /></div>-->
    <div class="other">
      <slot />
    </div>
  </div>
</div>

<style>
  .social-bar .inner div {
    min-width: 3rem;
  }
</style>

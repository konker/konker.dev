{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "clean": {
      "dependsOn": ["^clean"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": ["coverage/**"]
    },
    "lint-check": {
      "dependsOn": ["^lint-check"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["src/*", "dist/**"]
    },
    "ci": {
      "dependsOn": ["^ci"],
      "outputs": ["src/*", "dist/**"]
    },
    "cd": {
      "dependsOn": ["^cd"],
      "outputs": ["src/*", "dist/**"],
      "env": [
        "CODECOV_TOKEN",
        "AWS_DEFAULT_REGION",
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "AWS_ECR_REGISTRY",
        "AWS_ECR_REPOSITORY",
        "IMAGE_TAG",
        "HETZNER_K3S_KUBECONFIG",
        "K8S_NAMESPACE"
      ]
    },
    "codecov": {
      "dependsOn": ["^codecov"],
      "env": ["CODECOV_TOKEN"]
    },
    "upload-csp-hashes": {
      "dependsOn": ["^upload-csp-hashes"],
      "env": ["KEY_VALUE_STORE_ARN"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
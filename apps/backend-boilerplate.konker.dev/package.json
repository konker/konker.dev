{
  "name": "@konker.dev/backend-boilerplate.konker.dev",
  "version": "0.0.1",
  "type": "module",
  "author": "Konrad Markus <mail@konker.dev>",
  "license": "ISC",
  "description": "Boilerplate for backend services",
  "homepage": "https://konker.dev/",
  "keywords": [
    "node",
    "utils",
    "typescript",
    "functional-programming",
    "effect-ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/konker.dev/apps/backend-boilerplate.konker.dev"
  },
  "exports": {
    "./package.json": "./package.json",
    "./api/root/core": {
      "types": "./dist/api/root/core.d.ts",
      "import": "./dist/api/root/core.js"
    },
    "./api/root/handler": {
      "types": "./dist/api/root/handler.d.ts",
      "import": "./dist/api/root/handler.js"
    },
    "./hono/hono-app": {
      "types": "./dist/hono/hono-app.d.ts",
      "import": "./dist/hono/hono-app.js"
    },
    "./hono/hono-aws-serverless": {
      "types": "./dist/hono/hono-aws-serverless.d.ts",
      "import": "./dist/hono/hono-aws-serverless.js"
    },
    "./hono/hono-cloudflare-serverless": {
      "types": "./dist/hono/hono-cloudflare-serverless.d.ts",
      "import": "./dist/hono/hono-cloudflare-serverless.js"
    },
    "./hono/hono-node-server": {
      "types": "./dist/hono/hono-node-server.d.ts",
      "import": "./dist/hono/hono-node-server.js"
    },
    "./lib/consts": {
      "types": "./dist/lib/consts.d.ts",
      "import": "./dist/lib/consts.js"
    }
  },
  "files": [
    "dist/**/*",
    "!dist/**/*.test.*"
  ],
  "main": "dist/index.js",
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "@konker.dev/middleware-fp": "workspace:*",
    "aws-lambda": "^1.0.7",
    "effect": "^3.17.14",
    "hono": "^4.9.9",
    "sst": "3.17.14"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@effect/language-service": "^0.41.0",
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.36.0",
    "@konker.dev/common-config": "latest",
    "@types/aws-lambda": "^8.10.152",
    "@types/node": "^24.5.2",
    "@vitest/coverage-istanbul": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "leasot": "^14.4.0",
    "madge": "^8.0.0",
    "prettier": "^3.6.2",
    "sst": "^3.17.14",
    "tsx": "^4.20.6",
    "type-coverage": "^2.29.7",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "build": "pnpm run clean && tsc",
    "dev": "tsx watch src/hono/hono-node-server.ts",
    "cd": "",
    "ci": "pnpm run lint-check && pnpm run typecheck && pnpm run type-coverage-check && pnpm run test && pnpm run build && pnpm run generated-exports-check && pnpm run exports-check && pnpm run fixme-check",
    "circular-check": "madge --extensions ts --circular --no-color --no-spinner --warning src",
    "clean": "rm -rf dist && rm -rf .deploy && rm -f tsconfig.tsbuildinfo",
    "codecov": "npx --package=@konker.dev/common-config codecov-upload `pwd` '@konker.dev/backend-boilerplate'",
    "eslint-check": "eslint --max-warnings=0 '**/*.{ts,js,json}'",
    "eslint-fix": "npx eslint --fix||true",
    "exports-check": "attw --pack . --ignore-rules=cjs-resolves-to-esm --profile=node16",
    "fixme-check": "leasot --exit-nicely --skip-unsupported src",
    "generated-exports-check": "npx --package=@konker.dev/common-config generate-exports-verify `pwd`",
    "lint-check": "pnpm run eslint-check && pnpm run prettier-check && pnpm run circular-check && pnpm run fixme-check",
    "lint-fix": "pnpm run eslint-fix && pnpm run prettier-fix",
    "pre-push": "pnpm run lint-check && pnpm run typecheck",
    "prettier-check": "npx prettier --check --ignore-path .gitignore --ignore-path .prettierignore '**/*.{css,html,js,ts,json,md,yaml,yml}'",
    "prettier-fix": "pnpm run prettier-check --write",
    "test": "vitest run --coverage",
    "type-coverage-check": "type-coverage --detail --at-least 100 --ignore-files src/index.test.ts --ignore-files src/stream/index.ts",
    "typecheck": "tsc --noEmit"
  }
}

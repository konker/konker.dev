---
import MarkdownContent from '../components/content/MarkdownContent.astro';
import PageLayout from '../layouts/site/PageLayout.astro';
import { HomeBreadcrumb, loadMarkdownContent } from '../lib';
import type { LinkT } from '../lib/types';

// --------------------------------------------------------------------------
const content = loadMarkdownContent(import.meta.glob('./index-content.md', { eager: true }));
const pageTitle = content?.frontmatter.title;
const breadcrumbs: ReadonlyArray<LinkT> = [HomeBreadcrumb];
---

<PageLayout pageTitle={pageTitle} breadcrumbs={breadcrumbs}>
  <MarkdownContent markdownInstance={content} />
</PageLayout>

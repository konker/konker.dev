---
import type { CollectionEntry } from 'astro:content';
import type { MoonlightCollection } from '../../lib/moonlight/config';
import NavigationLink from '../site/NavigationLink.astro';

interface Props {
  readonly indexEntries: Array<CollectionEntry<MoonlightCollection>>;
  readonly itemIconName?: string;
}

const { indexEntries } = Astro.props;
---

<div id="index-navigation">
  <nav>
    {
      indexEntries.map((x) => (
        <p>
          <NavigationLink url={x.id} title={x.data.title} />
        </p>
      ))
    }
  </nav>
</div>
